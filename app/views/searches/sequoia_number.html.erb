<div id='sequoia'>
    <%= form_tag '/search/sequoia_number', method: 'get' do %>
      <p>
        <%= text_field_tag :source, params[:source] %>
        <%= text_field_tag :target, target_value(params[:target]) %>
        <%= submit_tag "Search", name: nil %>
      </p>
    <% end %>

    <% unless @path %>
        <h1>haha</h1>
    <% else %>
        <style>
        .link {
          stroke: #000;
          stroke-width: 1.5px;
        }
        .node text {
          pointer-events: none;
          font: 20px sans-serif;
        }
        </style>

        <script src="http://d3js.org/d3.v3.min.js"></script>

        <script>
        var width = 950,
            height = 500

        var svg = d3.select("#sequoia").append("svg")
            .attr("width", width)
            .attr("height", height);

        var force = d3.layout.force()
            .gravity(.05)
            .distance(150)
            .charge(-500)
            .size([width, height]);

        data = <%= @path.to_json.html_safe %>

        force
            .nodes(data.nodes)
            .links(data.links)
            .start();

        var link = svg.selectAll(".link")
            .data(data.links)
            .enter().append("line")
            .attr("class", "link");

        var node = svg.selectAll(".node")
            .data(data.nodes)
            .enter().append("g")
            .attr("class", "node")
            .call(force.drag);

        node.append("image")
            .attr("xlink:href", function(d) {
                if (d.index%2==0) {
                    return "/assets/investor.png"
                } else {
                    return "/assets/company.jpg"
                }
            })
            .attr("x", -8)
            .attr("y", -8)
            .attr("width", 30)
            .attr("height", 30);

        node.append("text")
            .attr("dx", 12)
            .attr("dy", ".35em")
            .on('click', function(d){
                window.open(d.url, '_blank');
            })
            .text(function(d) { return d.name });

        force.on("tick", function() {
          link.attr("x1", function(d) { return d.source.x; })
              .attr("y1", function(d) { return d.source.y; })
              .attr("x2", function(d) { return d.target.x; })
              .attr("y2", function(d) { return d.target.y; });

          node.attr("transform", function(d) { return "translate(" + d.x + "," + d.y + ")"; });
        });
        </script>
    <% end %>
</div>
