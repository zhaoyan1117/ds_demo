<div id='sequoia'>
    <div id='sequoia-form'>
        <%= form_tag search_sequoia_number_path, method: 'get' do %>
          <p>
            What's the degree of separation between
            <%= text_field_tag :source %>
            and
            <%= text_field_tag :target, 'Sequoia Capital' %> ?
            <%= submit_tag "Tell me!", id: 'sequoia-form-submit' %>
          </p>
        <% end %>
    </div>

    <div id='sequoia-desc'>
        Please specify source and target.
    </div>

    <style>
        .link {
          stroke: #000;
          stroke-width: 1.5px;
        }
        .node text {
          pointer-events: none;
          font: 15px;
        }
    </style>

    <script src="http://d3js.org/d3.v3.min.js"></script>
    <script>
        var width = 950,
            height = 500

        var svg = d3.select("#sequoia").append("svg")
            .attr("width", width)
            .attr("height", height);

        var force = d3.layout.force()
            .gravity(.05)
            .distance(250)
            .charge(-400)
            .size([width, height]);

        var drag = force.drag()
            .on("dragstart", dragstart);

        var data, link, node;

        $('form').submit(function(event){
            var form = $(this);

            $.ajax({
              type: form.attr('method'),
              url: form.attr('action'),
              data: form.serialize(),
              dataType: 'json',
              success: function(json, textStatus, jqXHR) {
                if (json.error) {
                    $('#sequoia-desc').html(json.error);
                    clean();
                } else {
                    data = json;
                    $('#sequoia-desc').html(json.degrees + ' degree of separation!');
                    visualizeit();
                }
              }
            });

            event.preventDefault();
        });

        function clean() {
            $('line').remove();
            $('g').remove();
        }

        function visualizeit() {
            force
                .nodes(data.nodes)
                .links(data.links)
                .start();

            link = svg.selectAll(".link")
                .data(data.links)
            link.exit().remove();
            link.enter().append("line")
                .attr("class", "link");

            node = svg.selectAll(".node")
                .data(data.nodes)
            node.exit().remove();
            node.enter().append("g")
                .attr("class", "node")
                .on("dblclick", dblclick)
                .call(drag);

            $('g image').remove();
            node.append("image")
                .attr("xlink:href", function(d) {
                    if (d.index%2==0) {
                        return "/assets/investor.png"
                    } else {
                        return "/assets/company.png"
                    }
                })
                .attr("x", -8)
                .attr("y", -8)
                .attr("width", 30)
                .attr("height", 30);

            $('g text').remove();
            node.append("text")
                .attr("dx", function(d) {
                    if(d.target){
                        return -50;
                    }else {
                        return 25;
                    }
                })
                .attr("dy", function(d) {
                    if(d.target){
                        return 40;
                    }else {
                        return 0;
                    }
                })
                .text(function(d) { return d.name });

            $('g text').on('click', function(d){
                alert('haha');
                window.open(d.url, '_blank');
            });

            force.on("tick", function() {
              link.attr("x1", function(d) { return d.source.x; })
                  .attr("y1", function(d) { return d.source.y; })
                  .attr("x2", function(d) { return d.target.x; })
                  .attr("y2", function(d) { return d.target.y; });

              node.attr("transform", function(d) { return "translate(" + d.x + "," + d.y + ")"; });
            });
        }


        function dblclick(d) {
            d.fixed = false;
        }

        function dragstart(d) {
            d.fixed = true;
        }
    </script>
</div>
